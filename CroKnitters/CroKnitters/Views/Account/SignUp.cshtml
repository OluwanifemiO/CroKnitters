@model CroKnitters.Entities.User

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container mx-auto">

    <div class="text-5xl font-extrabold text-center">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500 ">
            Hello CroKnitters!
        </span>
    </div>

    <div class="flex flex-wrap justify-center mt-10 items-stretch">
        <!--Sign up form-->
        <div class=" flex-1 rounded-lg border text-center w-50 h-100 shadow-xl m-5 justify-content-start bg-white">

            <h2 class="mt-5 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create an account</h2>

            @if (TempData["error"] != null)
            {
                <div>
                    @TempData["error"]
                </div>
            }

            <div class="sm:mx-auto sm:w-full sm:max-w-sm grid p-3">
                <form action="RegisterUser" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="grid-cols-2 gap-4">

                        <div>
                            <label for="FirstName" class="block text-sm font-bold leading-6 text-gray-900">First Name</label>
                            <input type="text" name="FirstName" id="FirstName" class="form-control block border-2 text-black-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="jane">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <br />

                        <div>
                            <label for="LastName" class="block text-sm font-bold leading-6 text-gray-900">Last Name</label>
                            <input type="text" name="LastName" id="LastName" class="form-control block border-2 text-black-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="smith">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <br />

                        <div>
                            <label for="Username" class="block text-sm font-bold leading-6 text-gray-900">Username</label>
                            <input type="text" name="Username" id="Username" class="form-control block border-2 text-black-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="janesmith">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <br />

                        <div>
                            <label for="Email" class="block text-sm font-bold leading-6 text-gray-900">Email</label>
                            <input type="Email" name="Email" id="Email" class="form-control block border-2 text-black-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="janesmith@gmail.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <br />

                        <div>
                            <label for="Password" class="block text-sm font-bold leading-6 text-gray-900">Password</label>
                            <input type="password" name="Password" id="Password" class="form-control border-2 text-black-900 placeholder:text-black-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <br />

                        <div>
                            <label for="Bio" class="block text-sm font-bold leading-6 text-gray-900">Bio</label>
                            <textarea type="text" name="Bio" id="Bio" class="form-control border-2 text-black-900 placeholder:text-black-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="Write something interesting about yourself here"> </textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div>
                            <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 mt-5 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-2">Create Account</button>
                        </div>

                    </div>

                    <p class="mt-3 text-center text-sm text-gray-500">
                        Have an account already?
                        <a asp-controller="Account" asp-action="Login" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500 ">Log In</a>
                    </p>


                </form>
            </div>

        </div>

        @* <!--Image div-->
        <div class="flex-1 rounded-lg border shadow-xl m-5 bg-fixed" style="background-image: url('/img/background.jpg'); background-size: cover; background-position: center; width:50px; height: 479px;">
            <h2 class="text-black text-center text-5xl font-bold animate-bounce" style="padding-top:220px;">CroKnitters.</h2>  <!--We can replace the text with the logo and make it bounce-->
        </div> *@

    </div>

</div>