@{
    ViewData["Title"] = "Sign Up";
}

<div>

    <div class="text-5xl font-extrabold text-center">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500 ">
            Hello CroKnitters!
        </span>
    </div>

    <div class="rounded-lg border text-center w-50 h-100 shadow-xl m-5 justify-center">

        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account:</h2>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form action="#" method="POST">

                <div>
                    <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
                    <input type="text" name="username" id="username" class="block flex-1 border-0 text-black-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="janesmith">
                </div>

                <br />

                <div>
                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                    <input type="password" name="password" id="password" class="block border-0 text-gray-900 placeholder:text-black-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="password">

                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign in</button>
                </div>

                <p class="mt-10 text-center text-sm text-gray-500">
                    Not a CroKnitter yet?
                    <a href="#" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Create a new account</a>
                </p>

            </form>
        </div>
    </div>

</div>
