@model UserProfileViewModel

@{
    ViewData["Title"] = " Edit User Profile";
}

<div class="justify-content-center rounded-lg border w-auto shadow-xl m-5 bg-white">
    <div class="p-5">
        <h2 class="mt-5 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Edit your Profile Details</h2>
        <!--user details-->
        <hr />

        <div class="pt-2 pb-2">
            <form asp-action="EditProfile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.user.UserId" />
                <input type="hidden" asp-for="@Model.user.Password" value="@Model.user.Password" />


                <div class="profilePicture">
                    <div class="justify-center text-md-center profilePicture rounded-full ">
                        <!--profile pic-->
                        <img src="@("~/img/profile/"+Model.UserImageSrc)" asp-append-version="true" alt="User Profile image" class="rounded-full" />
                    </div>

                    <!--Change profile pic-->
                        <label for="profilePicture">Choose a profile picture:</label>
                        <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
                        <button type="submit" class="btn">Upload</button>
                </div>


                <div class="mb-8 form-group">
                    <b> <label asp-for="@Model.user.Email" class="control-label"></label></b>
                    <input asp-for="@Model.user.Email" class="form-control" readonly="readonly" />
                    <span asp-validation-for="@Model.user.Email" class="text-danger"></span>
                </div>

                <div class="mb-8 form-group">
                    <b> <label asp-for="@Model.user.Username" class="control-label"></label></b>
                    <input asp-for="@Model.user.Username" class="form-control" />
                    <span asp-validation-for="@Model.user.Username" class="text-danger"></span>
                </div>

                <div class="mb-8 form-group">
                    <input asp-for="@Model.user.Password" class="form-control" readonly type="hidden" />
                </div>
                
                <div class="mb-8 form-group">
                    <b> <label class="control-label">First name</label></b>
                    <input asp-for="@Model.user.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.user.FirstName" class="text-danger"></span>
                </div>

                <div class="mb-8 form-group">
                    <b> <label class="control-label">Last name</label></b>
                    <input asp-for="@Model.user.LastName" class="form-control" />
                    <span asp-validation-for="@Model.user.LastName" class="text-danger"></span>
                </div>

                @* <div class="mb-8 form-group">
                    <b> <label class="control-label">Province</label></b>
                    <select asp-for="Province" class="form-control">
                        <option selected="@(Model.Provicne == "ON" ? "selected" : null)" value="ON">ON</option>
                        <option selected="@(Model.Provicne == "AB" ? "selected" : null)" value="AB">AB</option>
                        <option selected="@(Model.Provicne == "BC" ? "selected" : null)" value="BC">BC</option>
                        <option selected="@(Model.Provicne == "MB" ? "selected" : null)" value="MB">MB</option>
                        <option selected="@(Model.Provicne == "NB" ? "selected" : null)" value="NB">NB</option>
                        <option selected="@(Model.Provicne == "NL" ? "selected" : null)" value="NL">NL</option>
                        <option selected="@(Model.Provicne == "NS" ? "selected" : null)" value="NS">NS</option>
                        <option selected="@(Model.Provicne == "PE" ? "selected" : null)" value="PE">PE</option>
                        <option selected="@(Model.Provicne == "QC" ? "selected" : null)" value="QC">QC</option>
                        <option selected="@(Model.Provicne == "SK" ? "selected" : null)" value="SK">SK</option>
                        <option selected="@(Model.Provicne == "NT" ? "selected" : null)" value="NT">NT</option>
                        <option selected="@(Model.Provicne == "NU" ? "selected" : null)" value="NU">NU</option>
                        <option selected="@(Model.Provicne == "YT" ? "selected" : null)" value="YT">YT</option>
                    </select>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div> *@

                <div class="mb-8 form-group">
                    <b> <label class="control-label">Bio</label></b>
                    <input asp-for="@Model.user.Bio" class="form-control" />
                    <span asp-validation-for="@Model.user.Bio" class="text-danger"></span>
                </div>

                <div class="mb-8 form-group">
                    <input type="submit" value="Save" class="btn rounded-md bg-indigo-600 mt-3 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-2" />
                    <a asp-action="Index" class="btn rounded-md bg-indigo-600 mt-3 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-2 ">Back to Profile Detail</a>
                </div>
            </form>
        </div>

    </div>
</div>

