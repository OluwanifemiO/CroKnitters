@model PatternViewModel

@{
    ViewData["Title"] = "Edit Pattern";
}


<div class=" rounded-lg border text-center shadow-xl m-5 justify-content-start bg-white">
    <div class="p-5">
        <h2 class="mt-5 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"> Edit Pattern</h2>
        <hr />

        <div class="pt-2 pb-2">
            <form asp-action="EditPattern" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ActivePattern.PatternId" />

                <!--pattern details: images, id, name, description, creation date, stitch type, stitch count-->
                <div class="patternImage ">
                    <label for="PatternImages">Upload images for your patterns:</label>
                    <input type="file" id="PatternImages" name="PatternImages" accept="image/*">
                    <button type="submit" class="btn">Upload</button>
                </div>


                <div class="m-2 form-group">
                    <b> <label asp-for="ActivePattern.PatternName" class="control-label">Pattern Name</label></b>
                    <input asp-for="ActivePattern.PatternName" class="form-control" />
                    <span asp-validation-for="ActivePattern.PatternName" class="text-danger"></span>
                </div>

                <div class="m-2 form-group">
                    <b> <label asp-for="ActivePattern.Description" class="control-label"> Pattern Description</label></b>
                    <textarea asp-for="ActivePattern.Description" class="form-control"> </textarea>
                </div>

                <div class="m-2 form-group">
                    <b> <label class="control-label">Creation Date</label></b>
                    <input asp-for="ActivePattern.CreationDate" type="datetime" class="form-control" readonly="readonly" />
                </div>

                <div class="m-2 form-group">
                    <b> <label class="control-label">Stitch type</label></b>
                    <input asp-for="ActivePattern.StitchType" type="text" class="form-control" />
                </div>

                <div class="m-2 form-group">
                    <b> <label class="control-label">Stitch Count</label></b>
                    <input asp-for="ActivePattern.StitchCount" type="number" class="form-control" />
                </div>

                <div class="m-2 form-group">
                    <b> <label class="control-label">Tag</label></b>
                    <input asp-for="Tags" type="text" class="form-control" />
                </div>

                <div class="mb-8 form-group">
                    <input type="submit" value="Save" class="btn rounded-md bg-indigo-600 mt-3 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-2" />
                </div>

            </form>
        </div>
    </div>
</div>
